<!-- form for nombre, apellido, edad -->
        <form action="/productos" method="post">
            <div class="form-group">
                <label for="name">Producto</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Producto">
            </div>
            <div class="form-group">
                <label for="price">Precio</label>
                <input type="number" class="form-control" id="price" name="price" placeholder="Precio">
            </div>
            <div class="form-group">
                <label for="thumbnail">Thumbnail</label>
                <input type="text" class="form-control" id="thumbnail" name="thumbnail" placeholder="URL de la imagen">
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
            
        </form>
        <div class="div-btn">
            <a href="/productos">
                <button class="btn btn-secondary">Ver productos</button>
            </a>
        </div>


<div class="div-btn">
    <a href="/">
        <button class="btn btn-secondary">Cargar producto</button>
    </a>
</div>
<table class="table" style="margin: 0 auto; width: 50%;">
  <thead>
      <tr>
          <th scope="col">Producto</th>
          <th scope="col">Precio</th>
          <th scope="col">Thumbnail</th>
      </tr>
  </thead>
  <tbody>
      <!-- if no datos -->
      {{#unless datos }}
          <tr>
              <td colspan="3">No hay productos</td>
          </tr>
      {{/unless}}
      {{#if datos}}
          {{#each datos}}
              <tr>
                  <td>{{name}}</td>
                  <td>{{price}}</td>
                  <td><img src="{{thumbnail}}" alt='Imagen de {{name}}'></td>
              </tr>
          {{/each}}
      {{/if}}
  </tbody>
</table>